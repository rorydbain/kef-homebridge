{
  "name": "homebridge-kef-lsx",
  "displayName": "KEF Speaker Control",
  "version": "1.0.0",
  "description": "Homebridge plugin to control KEF LSX II, LS50 Wireless II, and LS60 speakers via HomeKit",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rorydbain/kef-homebridge.git"
  },
  "bugs": {
    "url": "https://github.com/rorydbain/kef-homebridge/issues"
  },
  "homepage": "https://github.com/rorydbain/kef-homebridge#readme",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "watch": "bun build src/index.ts --outdir dist --target node --watch",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "homebridge-plugin",
    "kef",
    "kef-lsx",
    "kef-ls50",
    "kef-ls60",
    "speaker",
    "audio"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "homebridge": "^1.11.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0"
  }
}
